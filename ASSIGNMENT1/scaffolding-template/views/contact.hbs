<section class="contact-section py-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 animate-on-scroll">
        <h2 class="section-title mb-4 mt-5">Get In <span class="text-primary">Touch</span></h2>
        <p class="lead">I'd love to hear from you! Whether you have a project in mind or just want to say hello, feel free to reach out.</p>
        
        <div class="contact-info mt-5">
          <div class="info-item d-flex mb-4">
            <div class="icon-box bg-primary text-white rounded-circle me-3 flex-shrink-0 p-2">
              <i class="fas fa-map-marker-alt mt-2"></i>
            </div>
            <div>
              <h5>Location</h5>
              <p class="mb-0">Barrie, Canada</p>
            </div>
          </div>
          
          <div class="info-item d-flex mb-4">
            <div class="icon-box bg-primary text-white rounded-circle me-3 flex-shrink-0 p-2">
              <i class="fas fa-envelope mt-2"></i>
            </div>
            <div>
              <h5>Email</h5>
              <p class="mb-0">nikhil@georgiancollege.ca</p>
            </div>
          </div>
          
          <div class="info-item d-flex mb-4">
            <div class="icon-box bg-primary text-white rounded-circle me-3 flex-shrink-0 p-2">
              <i class="fas fa-phone-alt mt-2"></i>
            </div>
            <div>
              <h5>Phone</h5>
              <p class="mb-0">+1 (123) 456-7890</p>
            </div>
          </div>
        </div>

        <div class="social-links mt-4">
          <a href="https://github.com/Nikhil-Jassal" class="btn btn-outline-primary btn-social me-2 hover-grow"><i class="fab fa-github"></i></a>
          <a href="#" class="btn btn-outline-primary btn-social me-2 hover-grow"><i class="fab fa-linkedin"></i></a>
          <a href="#" class="btn btn-outline-primary btn-social me-2 hover-grow"><i class="fab fa-twitter"></i></a>
          <a href="#" class="btn btn-outline-primary btn-social me-2 hover-grow"><i class="fab fa-instagram"></i></a>
        </div>
      </div>

      <div class="col-lg-6 animate-on-scroll">
        <div class="contact-form bg-white p-4 shadow-sm rounded">
          {{#if success}}
            <div class="alert alert-success">{{success}}</div>
          {{/if}}
          {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
          {{/if}}
          
          <form id="contactForm" action="/contact" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label mt-5">Your Name</label>
              <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
              <label for="subject" class="form-label">Subject</label>
              <input type="text" class="form-control" id="subject" name="subject">
            </div>
            <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-lg w-100">
              <span id="submitText">Send Message</span>
              <span id="submitSpinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

